<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- normal -->
    <item android:state_pressed="false">

        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="10dp" />
                    <solid android:color="@color/yellow" />
                </shape>
            </item>
            <item android:width="40dp" android:height="40dp" android:drawable="@drawable/icon_not_pressed" android:gravity="center_vertical" android:left="100dp" />
        </layer-list>
    </item>

    <!-- pressed -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:innerRadius="10dp" android:shape="rectangle">
                    <corners android:radius="10dp" />
                    <solid android:color="@color/orange" />
                </shape>
            </item>
            <item android:width="40dp" android:height="40dp" android:drawable="@drawable/icon_pressed" android:gravity="center_vertical" android:left="100dp"></item>
        </layer-list>
    </item>

</selector>