<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:src="@drawable/img_home_profile"
        app:layout_constraintBottom_toTopOf="@+id/tv_age_title_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_id_title_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/tv_id"
        android:textAlignment="textEnd"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_name_title_home"
        app:layout_constraintEnd_toStartOf="@+id/tv_id_home"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="@+id/btn_exit_home"
        app:layout_constraintTop_toBottomOf="@+id/iv_profile" />

    <TextView
        android:id="@+id/tv_name_title_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tv_name"
        android:textAlignment="textEnd"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_age_title_home"
        app:layout_constraintEnd_toStartOf="@+id/tv_name_home"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="@+id/btn_exit_home"
        app:layout_constraintTop_toBottomOf="@+id/tv_id_title_home" />

    <TextView
        android:id="@+id/tv_age_title_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tv_age"
        android:textAlignment="textEnd"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_mbti_title_home"
        app:layout_constraintEnd_toStartOf="@+id/tv_age_home"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="@+id/btn_exit_home"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_title_home" />

    <TextView
        android:id="@+id/tv_mbti_title_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tv_mbti"
        android:textAlignment="textEnd"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_mbti_home"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="@+id/btn_exit_home"
        app:layout_constraintTop_toBottomOf="@+id/tv_age_title_home" />

    <TextView
        android:id="@+id/tv_id_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/tv_id_title_home"
        app:layout_constraintEnd_toEndOf="@+id/btn_exit_home"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/tv_id_title_home"
        app:layout_constraintTop_toTopOf="@+id/tv_id_title_home" />


    <TextView
        android:id="@+id/tv_name_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name_title_home"
        app:layout_constraintEnd_toEndOf="@+id/btn_exit_home"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/tv_name_title_home"
        app:layout_constraintTop_toTopOf="@+id/tv_name_title_home" />

    <TextView
        android:id="@+id/tv_age_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/tv_age_title_home"
        app:layout_constraintEnd_toEndOf="@+id/btn_exit_home"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/tv_age_title_home"
        app:layout_constraintTop_toTopOf="@+id/tv_age_title_home" />

    <TextView
        android:id="@+id/tv_mbti_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/tv_mbti_title_home"
        app:layout_constraintEnd_toEndOf="@+id/btn_exit_home"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/tv_mbti_title_home"
        app:layout_constraintTop_toTopOf="@+id/tv_mbti_title_home" />

    <Button
        android:id="@+id/btn_exit_home"
        style="@style/ComponentMargin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="@string/btn_exit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>